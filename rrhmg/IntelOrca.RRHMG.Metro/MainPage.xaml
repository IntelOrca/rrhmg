<Page
    x:Class="IntelOrca.RRHMG.Metro.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelOrca.RRHMG.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#CCCCCC">
        <Canvas x:Name="XamlCanvas">
            <local:HexagonShape Canvas.Left="256" Canvas.Top="129" Size="64" Foreground="Blue" />
            <local:HexagonShape Canvas.Left="354" Canvas.Top="186" Size="64" Foreground="Red" />
            <local:HexagonShape Canvas.Left="159" Canvas.Top="186" Size="64" Foreground="Green" />
            <local:HexagonShape Canvas.Left="256" Canvas.Top="242" Size="64" Foreground="Yellow" />
        </Canvas>
        <Grid>
            <TextBlock x:Name="ttt" Foreground="Black" FontSize="42" Text="Recursive random hexagonal map generator" FontFamily="Segoe UI" />
        </Grid>
    </Grid>    
</Page>
